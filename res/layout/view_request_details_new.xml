<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" >
        </LinearLayout>
<ScrollView
    	android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/imageView1"
	    android:orientation="vertical" >
	
	    <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textView1" 
	        android:layout_alignParentTop="true"
	        android:gravity="center"
	        android:orientation="horizontal" >
	    <ImageView 
				android:id="@+id/request_row_exclamation_iv"
			  	android:src="@drawable/priority"
			  	android:layout_width="3mm"
			  	android:layout_height="3mm"
			  	android:visibility="gone"
			  	android:layout_marginTop="6px"
			  	android:layout_marginRight="15px"
		 />
	     <TextView
	        android:id="@+id/request_details_name_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerInParent="true"
	       	android:layout_marginTop="15px"
	        android:layout_marginBottom="15px"
	        android:text="(Name)"
	        android:textSize="30px"
	        android:textStyle="bold"/>
	    </LinearLayout>
	   
		<View
	        android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:background="#FFFFFF" />
	
	   <TableLayout
	        android:id="@+id/tableLayout1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center">
	
	        <TableRow
	            android:id="@+id/tableRow1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            android:gravity="center"
	            >
	
		    <LinearLayout
		        android:id="@+id/linearLayout4"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" 
		        android:layout_weight="1"
		        android:gravity="center_horizontal"
		        >
			   <TextView
		            android:id="@+id/request_details_date_type"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="6px"
		            android:text="(Date Type)"
		            android:textSize="24px" />
		        <TextView
		            android:id="@+id/request_details_date_added_tv"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="6px"
		            android:text="(Date Added)"
		            android:textSize="24px" />
		    </LinearLayout>
		    	   
		    <View
		        android:id="@+id/centerLayout"
		        android:layout_width="1dip"
		        android:layout_height="fill_parent"
		        android:background="#FFFFFF" />
	
		    <LinearLayout
		        android:id="@+id/linearLayout5"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" 
		        android:layout_weight="1"
		        android:gravity="center_horizontal"
		        android:background="@drawable/itembackground"
		        >
	
		        <TextView
		            android:id="@+id/request_details_building_tv"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="(Blank)"
		            android:textSize="24px" />
	
		        <ImageView
		            android:id="@+id/imageView2"
		            android:layout_width="40px"
		            android:layout_height="40px"
		            android:src="@drawable/pushpin" />
	
		        <TextView
		            android:id="@+id/request_details_apartment_tv"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="(Blank)"
		            android:textSize="24px" />
		    </LinearLayout>
		 </TableRow>
		</TableLayout>
	    	 
	         <View
	            android:layout_width="fill_parent"
	            android:layout_height="1dip"
	            android:background="#FFFFFF" />
	
	         <TextView
	             android:id="@+id/request_details_details_tv"
	             android:layout_width="fill_parent"
	             android:layout_marginTop="6px"
	             android:gravity="left"
	             android:layout_height="60px"
	             android:text="(Details)"
	             android:textSize="24px" />
	
	        <RelativeLayout
	           android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"  >
	      	   
	         <Button
	             android:id="@+id/imageButton1"
	             android:layout_width="wrap_content"
	             android:layout_height="43dp"
	             android:layout_alignParentRight="true"
	             android:text="More >>"
	              />
	            
	    	 </RelativeLayout>
	         
	         <View
	            android:layout_width="fill_parent"
	            android:layout_height="1dip"
	            android:background="#FFFFFF" />
	
	         <Spinner
	             android:id="@+id/spinner1"
	             android:layout_width="fill_parent"
	             android:layout_height="wrap_content" />
	         
	         <View
	            android:layout_width="fill_parent"
	            android:layout_height="1dip"
	            android:background="#FFFFFF" />
	         
	          <EditText
	                android:id="@+id/request_details_notes_edit_text"
	                android:layout_width="fill_parent"
	                android:minHeight="390px"
	                android:layout_height="wrap_content"
	                android:gravity="top"
	                android:hint="Click here to add comments text." >
	         
	         </EditText>
	            
	 </LinearLayout>
	</ScrollView>

</RelativeLayout>    
    