<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
<RelativeLayout
    android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
</RelativeLayout>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="68mm"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="#1a1a1a" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="6px"
                android:text="Request Details: "
                android:textSize="32px"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2mm"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="Type: "
                android:textSize="28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_details_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="(Name)"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="Building: "
                android:textSize="28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_details_building_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="(Blank)"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="Apt.: "
                android:textSize="28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_details_apartment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="(Blank)"
                android:textSize="28px" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#FFFFFF" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="Current Status: "
                android:textSize="28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_details_current_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="(Blank)"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="Priority: "
                android:textSize="28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_details_priority_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="(Blank)"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="Request Added: "
                android:textSize="28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_details_date_added_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="(Blank)"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="Request Completed: "
                android:textSize="28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_details_date_completed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="(Blank)"
                android:textSize="28px" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#FFFFFF" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="Details: "
                android:textSize="28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_details_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="(Blank)"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="Optional Notes: "
                android:textSize="28px"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/request_details_notes_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="200sp"
                android:gravity="top"
                android:hint="Click here to edit optional text." >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#FFFFFF" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="Updated Status of Request: "
                android:textSize="28px"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/RequestDetailsRadioButtons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/radio_button_incomplete"
                    android:checked="false"
                    android:text="Incomplete" />

                <RadioButton
                    android:id="@+id/radio_button_in_progress"
                    android:checked="false"
                    android:text="In Progress" />

                <RadioButton
                    android:id="@+id/radio_button_complete"
                    android:checked="false"
                    android:text="Complete" />
            </RadioGroup>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/request_details_save_changes_report_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="3mm"
                android:onClick="onSaveChangesButtonClick"
                android:text="Save Changes"
                android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>

<ImageView
    android:id="@+id/imageView1"
    android:layout_width="7mm"
    android:layout_height="7mm"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:clickable="true"
    android:onClick="handleHelpButton"
    android:src="@drawable/help" />

</RelativeLayout>


    
    
    
    