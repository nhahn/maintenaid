<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content">
		<TextView 
			android:id="@+id/view_list_complete_requests_title_tv"
			android:textStyle="bold" 
			android:textSize="32px" 
			android:text="Completed Requests:" 
			android:layout_marginTop="10px" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>
		<LinearLayout android:orientation="horizontal" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content">
			<TextView android:id="@+id/title_tv" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content"
	        	android:textStyle="bold" 
				android:textSize="25px" 
				android:layout_marginTop="9px"  
	        	android:text="Sort by: " ></TextView>
	
	        <Spinner
	            android:id="@+id/spinner1"
	            android:layout_width="30mm"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="1mm"
	            android:layout_marginTop="1mm"
	
	            android:prompt="@string/sort_by_prompt" >
			</Spinner>
		</LinearLayout>
	</LinearLayout>

	<ListView
	    android:id="@android:id/list"
	    android:layout_width="wrap_content"
	    android:layout_height="645px"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentBottom="true"
	    android:background="#1a1a1a" >
	</ListView>
	    
</RelativeLayout>
