<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">
	<TextView android:layout_height="0px" 
	    android:id="@+id/request_row_first_row_tv"
		android:textSize="30px" 
		android:layout_marginTop="6px" 
		android:layout_width="wrap_content"/>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">
		<ImageView 
			android:id="@+id/request_row_exclamation_iv"
		  	android:src="@drawable/priority"
		  	android:layout_width="3mm"
		  	android:layout_height="3mm"
		  	android:visibility="gone"
		  	android:layout_marginTop="6px"
		  	android:layout_marginRight="15px"
		  	/>	
		<TextView android:layout_height="wrap_content" 
		    android:id="@+id/request_row_second_row_tv"
			android:textSize="30px" 
			android:scrollHorizontally="true"
			android:layout_marginTop="0px" 
			android:layout_width="wrap_content"/>
	</LinearLayout>	
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" 
	android:layout_width="wrap_content" 
	android:orientation="horizontal">
	
			<ImageView 
			android:id="@+id/request_row_exclamation2_iv"
		  	android:src="@drawable/priority"
		  	android:layout_width="3mm"
		  	android:layout_height="1mm"
		  	android:visibility="invisible"
		  	android:layout_marginTop="6px"
		  	android:layout_marginRight="15px"
		  	/>	
	<TextView android:layout_height="wrap_content" 
	    android:id="@+id/request_row_third_row_tv"
		android:textSize="20px" 
		android:layout_marginTop="6px" 
		android:layout_width="wrap_content"/>
	
	
	</LinearLayout>
</LinearLayout>


    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    